					</Component>
				</Directory>
			</Directory>
			<Directory Id="ProgramMenuFolder">
				<Directory Id="ApplicationProgramsFolder" Name="$(var.ProductName)">
					<Component Id="ApplicationShortcutAwesomeShips" Guid="4CEBD68F-E933-47f9-B02C-A4FC69FDB551">
						<Shortcut Id="ShortcutAwesomeShips"
							 Name="AwesomeShips"
							 Description="$(var.ProductName)"
							 Target="[INSTALLLOCATION]AwesomeShips.exe"
							 WorkingDirectory="INSTALLLOCATION"/>
						<RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
						<RegistryValue Root="HKCU" Key="Software\$(var.Manufacturer)\$(var.ProductName)" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
					</Component>
				</Directory>
			</Directory>
		</Directory>

		<Feature Id="ProductFeature" Title="SetupProject1" Level="1">
			<ComponentRef Id="ProductComponent" />
			<ComponentRef Id="ApplicationShortcutAwesomeShips" />
		</Feature>

		<Property Id="WIXUI_INSTALLDIR" Value="INSTALLLOCATION" ></Property>
		<WixVariable Id="WixUILicenseRtf" Overridable="yes" Value="License.rtf"/>
		<UIRef Id="WixUI_InstallDir"/>

	</Product>
</Wix>