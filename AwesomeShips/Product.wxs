<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<?define ProductName="AwesomeShips" ?>
	<?define ProductVersion="1.0.0.0" ?>
	<?define ProductCode="b7bc7c6f-9a4e-4973-be84-eca8e3427c97"?>
	<?define UpgradeCode="06a81104-1e30-463d-87e1-e8a79b4c682a"?>
	<?define Manufacturer="MyCompany"?>

	<Product Id="$(var.ProductCode)" Name="$(var.ProductName)" Language="1049" Version="$(var.ProductVersion)" Manufacturer="$(var.Manufacturer)" UpgradeCode="$(var.UpgradeCode)">
		<Package InstallerVersion="200" Compressed="yes" />

		<Media Id="1" Cabinet="media1.cab" EmbedCab="yes" />

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
				<Directory Id="INSTALLLOCATION" Name="$(var.ProductName)">
					<Component Id="ProductComponent" Guid="b11556a2-e066-4393-af5c-9c9210187eb2">
						<File Id='AwesomeShips' DiskId='1' Source='D:\VSRPP\Rel\AwesomeShips.exe'/>

						<File Id='libgcc_s_dw2_1' DiskId='1' Source='D:\VSRPP\Rel\libgcc_s_dw2-1.dll'/>
						<File Id='mingwm10' DiskId='1' Source='D:\VSRPP\Rel\mingwm10.dll'/>
						<File Id='QtCored4' DiskId='1' Source='D:\VSRPP\Rel\QtCore4.dll'/>
						<File Id='QtDeclaratived4' DiskId='1' Source='D:\VSRPP\Rel\QtDeclarative4.dll'/>
						<File Id='QtGuid4' DiskId='1' Source='D:\VSRPP\Rel\QtGui4.dll'/>
						<File Id='QtNetworkd4' DiskId='1' Source='D:\VSRPP\Rel\QtNetwork4.dll'/>
						<File Id='QtScriptd4' DiskId='1' Source='D:\VSRPP\Rel\QtScript4.dll'/>
						<File Id='QtSqld4' DiskId='1' Source='D:\VSRPP\Rel\QtSql4.dll'/>
